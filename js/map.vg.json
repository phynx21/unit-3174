{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 500,
  "title": {
    "text": "Number of Youtube Users by Country in February 2024",
    "fontSize": 24,
    "font": "Arial",
    "anchor": "middle"
  },
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/phynx21/unit-3174/refs/heads/main/js/WorldMapWithGraticules.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
        {
      "data": {
        "url": "https://raw.githubusercontent.com/phynx21/unit-3174/refs/heads/main/js/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "skyblue"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/phynx21/unit-3174/refs/heads/main/js/WorldMapWithGraticules.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    }, 
    {
      "data": {
        "url": "https://raw.githubusercontent.com/phynx21/unit-3174/refs/heads/main/data/youtube-users-by-country-2025-with-coords.csv"
      },
      "mark": {"type": "circle"},
      "encoding": {
        "latitude": {"field": "latitude", "type": "quantitative"},
        "longitude": {"field": "longitude", "type": "quantitative"},
        "size": {
          "field": "TotalUsers2024Feb",
          "type": "quantitative",
          "title": "Total Users",
          "scale": {"type": "sqrt", "range": [1, 1000]}
        },
        "color": {
          "field": "YouTubeUsers_Penetration_Pct_2024Feb",
          "type": "quantitative",
          "title": "Penetration Rate",
          "scale": {"scheme": "redpurple"},
          "legend": {"format": ".1f", "title": "Penetration Rate (%)"}
        },
        "tooltip": [
          {"field": "country", "type": "nominal", "title": "Country"},
          {
            "field": "TotalUsers2024Feb",
            "type": "quantitative",
            "title": "Total Users",
            "format": ","
          },
          {
            "field": "YouTubeUsers_Penetration_Pct_2024Feb",
            "type": "quantitative",
            "title": "Penetration Rate (%)",
            "format": ".1f"
          }
        ]
      }
    }
  ]
}
